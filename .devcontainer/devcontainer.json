{
	"name": "Gleam",
	"dockerComposeFile": "./compose.yaml",
	"service": "app",
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"ms-playwright.playwright",
				"anthropic.claude-code",
				"gleam.gleam"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh"
			}
		}
	},
	"workspaceFolder": "/workspace",
	"remoteUser": "root",
	"postCreateCommand": "su node -c 'npm install'",
	"runArgs": [
		"--user=root"
	]
}
