{
  "includeCoAuthoredBy": false,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".gleam\"))' | xargs -I {} gleam format {}"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx playwright:*)",
      "Bash(gleam:*)",
      "WebSearch",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [
      "Read(.env*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(rm -rf:*)",
      "Bash(find * -delete:*)",
      "Bash(find * -exec:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(ssh:*)",
      "Bash(docker:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git rm:*)",
      "Bash(npm config:*)",
      "Bash(npm exec:*)",
      "Bash(npm install:*)",
      "Bash(npm login:*)",
      "Bash(npm publish:*)"
    ]
  }
}
