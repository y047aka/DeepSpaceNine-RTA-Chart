{
  "name": "app",
  "scripts": {
    "start": "run-pty % elm-watch hot % npm run esbuild -- --serve=9000 --servedir=public",
    "build": "elm-watch make --optimize && npm run esbuild -- --minify",
    "esbuild": "esbuild app.ts --bundle --outdir=public/build --public-path=/build/"
  },
  "devDependencies": {
    "elm-watch": "^1.1.2",
    "esbuild": "^0.17.16",
    "run-pty": "^4.0.3"
  }
}
